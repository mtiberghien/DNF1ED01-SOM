{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 600,
  "height": 450,
  "background": "black",
  "signals": [
    {
      "name": "current_step",
      "value": -1,
      "bind": {"input": "range", "min": -1, "max": 2370, "step": 1},
      "on": [
        {
          "events": "timer{100}",
          "update": "autoplay ? (current_step >= steps[1] ? -1 :current_step + 1 ): current_step"
        }
      ]
    },
    {
      "name": "neuronscale",
      "init": "min(2,min(width,height)/400)",
      "bind": {"input": "range", "min": 0.5, "step": 0.1, "max": 2}
    },
    {"name": "autoplay", "value": false, "bind": {"input": "checkbox"}},
    {"name": "showmap", "value": false, "bind": {"input": "checkbox"}},
    {"name": "showrealdata", "value": true, "bind": {"input": "checkbox"}},
    {"name": "showneurons", "value": true, "bind": {"input": "checkbox"}},
    {"name": "showlinks", "value": false, "bind": {"input": "checkbox"}},
    {
      "name": "scale",
      "value": 0.8,
      "bind": {"input": "range", "step": 0.05, "min": 0, "max": 1},
      "on": [
        {
          "events": "view:mousewheel",
          "update": "max(0, min(1, scale + (event.wheelDelta > 0 ? 0.1 : -0.1)))"
        }
      ]
    },
    {
      "name": "selectedNeuron",
      "init": "{}",
      "on": [
        {"events": "@neuron:mouseover", "update": "datum"},
        {"events": "@neuron:mouseout", "update": "{}"}
      ]
    }
  ],
  "data": [
    {
      "name": "labels",
      "values": [
        {"id": -1, "name": "None"},
        {"id": 0, "name": "Iris-setosa"},
        {"id": 1, "name": "Iris-versicolor"},
        {"id": 2, "name": "Iris-virginica"}
      ]
    },
    {
      "name": "iris",
      "transform": [
        {"type": "filter", "expr": "isValid(datum.pw)"},
        {"type": "formula", "expr": "datum.pl+datum.pw", "as": "x"},
        {"type": "formula", "expr": "datum.sl+datum.sw", "as": "y"},
        {"type": "formula", "expr": "scale('id', datum.class)", "as": "class"},
        {"type": "identifier", "as": "id"},
        {"type": "formula", "expr": "datum.id -1", "as": "id"}
      ],
      "format": {
        "type": "csv",
        "parse": {
          "sl": "number",
          "sw": "number",
          "pl": "number",
          "pw": "number"
        },
        "header": ["sl", "sw", "pl", "pw", "class"],
        "delimiter": ","
      },
      "url": "https://raw.githubusercontent.com/mtiberghien/DNF1ED01-SOM/master/iris.data?token=ASL2ZNJMDB3DV54GHZGUJ63AJIKOM"
    },
    {
      "name": "neurons",
      "format": {
        "type": "dsv",
        "delimiter": ";",
        "parse": {
          "x-grid": "number",
          "y-grid": "number",
          "z-grid": "number",
          "step": "number",
          "score": "number",
          "secondary": "number",
          "class": "number",
          "stabilized": "number"
        },
        "header": [
          "vector",
          "x-grid",
          "y-grid",
          "z-grid",
          "step",
          "score",
          "class",
          "secondary",
          "stabilized",
          "entries"
        ]
      },
      "url": "https://raw.githubusercontent.com/mtiberghien/DNF1ED01-SOM/master/som2D.data?token=ASL2ZNOLITE24TLC6B5LJ5TAKG36G",
      "transform": [
        {"type": "extent", "signal": "steps", "field": "step"},
        {"type": "extent", "signal": "scores", "field": "score"},
        {"type": "filter", "expr": "datum.step === current_step"},
        {
          "type": "formula",
          "expr": "split(replace(replace(datum.vector, '[',''),']',''),',')",
          "as": "vector"
        },
        {
          "type": "formula",
          "expr": "[toNumber(datum.vector[0]),toNumber(datum.vector[1]),toNumber(datum.vector[2]),toNumber(datum.vector[3])]",
          "as": "vector"
        },
        {
          "type": "formula",
          "expr": "datum.vector[0]+datum.vector[1]",
          "as": "y"
        },
        {
          "type": "formula",
          "expr": "datum.vector[2]+datum.vector[3]",
          "as": "x"
        },
        {
          "type": "formula",
          "expr": "{x:datum['x-grid'], y:datum['y-grid'],z:datum['z-grid']}",
          "as": "neuron"
        },
        {
          "type": "formula",
          "expr": "datum.neuron.x+'.'+datum.neuron.y+'.'+datum.neuron.z",
          "as": "id"
        }
      ]
    },
    {
      "name": "entries",
      "source": "neurons",
      "transform": [
        {"type": "filter", "expr": "datum.id === selectedNeuron.id"},
        {"type": "project", "fields": ["entries"]},
        {
          "type": "formula",
          "expr": "split(replace(replace(datum.entries, '[',''),']',''),',')",
          "as": "entries"
        },
        {"type": "flatten", "fields": ["entries"]},
        {"type": "formula", "expr": "toNumber(datum.entries)", "as": "entries"},
        {
          "type": "lookup",
          "from": "iris",
          "key": "id",
          "fields": ["entries"],
          "values": ["x", "y"]
        }
      ]
    },
    {
      "name": "dimensions",
      "source": "neurons",
      "transform": [
        {
          "type": "aggregate",
          "fields": ["x-grid", "y-grid", "z-grid"],
          "ops": ["max", "max", "max"],
          "as": ["dx", "dy", "dz"]
        },
        {
          "type": "formula",
          "expr": "[datum.dx+1, datum.dy+1, datum.dz+1]",
          "as": "d"
        }
      ]
    },
    {
      "name": "links",
      "source": "neurons",
      "transform": [
        {
          "type": "project",
          "fields": ["neuron", "id"],
          "as": ["source", "s_id"]
        },
        {"type": "formula", "expr": "data('dimensions')[0].d", "as": "dim"},
        {
          "type": "formula",
          "expr": "[min(datum.dim[0]-1,datum.source.x+1)+'.'+datum.source.y +'.'+datum.source.z,datum.source.x+'.'+min(datum.dim[1]-1,datum.source.y+1)+'.'+datum.source.z,datum.source.x+'.'+datum.source.y+'.'+min(datum.dim[2]-1,datum.source.z+1)]",
          "as": "target"
        },
        {"type": "flatten", "fields": ["target"]},
        {
          "type": "lookup",
          "from": "neurons",
          "key": "id",
          "fields": ["s_id"],
          "values": ["x", "y", "z"],
          "as": ["s_x", "s_y", "s_z"]
        },
        {
          "type": "lookup",
          "from": "neurons",
          "key": "id",
          "fields": ["target"],
          "values": ["x", "y", "z", "neuron"],
          "as": ["t_x", "t_y", "t_z", "target"]
        }
      ]
    }
  ],
  "legends": [
    {
      "orient": "right",
      "fill": "color",
      "labelColor": "#fff",
      "encode": {
        "labels": {"update": {"text": {"signal": "scale('label',datum.value)"}}}
      }
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "domain": {"data": "iris", "field": "x"},
      "zero": false,
      "range": [
        {"signal": "width*(1-scale)/2"},
        {"signal": "width*(scale+1)/2"}
      ]
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {"data": "iris", "field": "y"},
      "range": [
        {"signal": "height*(1-scale)/2"},
        {"signal": "height*(1+scale)/2"}
      ],
      "zero": false
    },
    {
      "name": "xscale-grid",
      "type": "linear",
      "domain": {"data": "neurons", "field": "x-grid"},
      "range": [
        {"signal": "width*(1-scale)/2"},
        {"signal": "width*(scale+1)/2"}
      ]
    },
    {
      "name": "yscale-grid",
      "type": "linear",
      "domain": {"data": "neurons", "field": "y-grid"},
      "range": [
        {"signal": "height*(1-scale)/2"},
        {"signal": "height*(1+scale)/2"}
      ],
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "labels", "field": "id", "sort": true},
      "range": ["#555", "red", "yellow", "blue"]
    },
    {
      "name": "label",
      "type": "ordinal",
      "domain": {"data": "labels", "field": "id"},
      "range": {"data": "labels", "field": "name"}
    },
    {
      "name": "id",
      "type": "ordinal",
      "domain": {"data": "labels", "field": "name"},
      "range": {"data": "labels", "field": "id"}
    },
    {
      "name": "score",
      "type": "linear",
      "domain": {"signal": "scores"},
      "range": [{"signal": "50*neuronscale"}, {"signal": "300*neuronscale"}]
    }
  ],
  "axes": [
    {
      "orient": "left",
      "scale": "yscale",
      "title": {"signal": "showmap ? 'Rows':'Sepal.Width + Sepal.Length'"},
      "titleColor": "#fff",
      "domain": false,
      "labels": false,
      "ticks": false
    },
    {
      "orient": "bottom",
      "scale": "xscale",
      "titleColor": "#fff",
      "title": {"signal": "showmap ? 'Columns':'Petal.Width + Petal.Length'"},
      "domain": false,
      "labels": false,
      "ticks": false
    }
  ],
  "marks": [
    {
      "type": "text",
      "encode": {
        "enter": {
          "fontSize": {"value": 14},
          "fontWeight": {"value": "bold"},
          "xc": {"signal": "width/2"},
          "align": {"value": "center"},
          "fill": {"value": "#eee"}
        },
        "update": {
          "text": {
            "signal": "(showmap ? 'Neuron map: ':'K-Means step: ') + current_step"
          }
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "iris"},
      "encode": {
        "enter": {"stroke": {"value": "#555"}},
        "update": {
          "size": {"value": 30, "mult": {"signal": "neuronscale"}},
          "opacity": {"signal": "showrealdata && !showmap ? 0.5 : 0"},
          "fill": {"field": "class", "scale": "color"},
          "xc": {"field": "x", "scale": "xscale"},
          "yc": {"field": "y", "scale": "yscale"}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "entries"},
      "encode": {
        "enter": {"stroke": {"value": "#555"}},
        "update": {
          "size": {"value": 30, "mult": {"signal": "neuronscale"}},
          "opacity": {"signal": "showrealdata && !showmap ? 0.5 : 0"},
          "fill": {"value": "white"},
          "xc": {"field": "x", "scale": "xscale"},
          "yc": {"field": "y", "scale": "yscale"}
        }
      }
    },
    {
      "type": "rule",
      "from": {"data": "links"},
      "encode": {
        "update": {
          "stroke": {"value": "#bbb"},
          "strokeWidth": {"value": 0.5},
          "opacity": {"signal": "showlinks && showneurons ? 1 :0"},
          "x": [
            {"test": "showmap", "field": "source.x", "scale": "xscale-grid"},
            {"field": "s_x", "scale": "xscale"}
          ],
          "y": [
            {"test": "showmap", "field": "source.y", "scale": "yscale-grid"},
            {"field": "s_y", "scale": "yscale"}
          ],
          "x2": [
            {"test": "showmap", "field": "target.x", "scale": "xscale-grid"},
            {"field": "t_x", "scale": "xscale"}
          ],
          "y2": [
            {"test": "showmap", "field": "target.y", "scale": "yscale-grid"},
            {"field": "t_y", "scale": "yscale"}
          ]
        }
      }
    },
    {
      "type": "symbol",
      "name": "neuron",
      "from": {"data": "neurons"},
      "encode": {
        "enter": {
          "stroke": {"field": "secondary", "scale": "color"},
          "tooltip": {"signal": "'['+datum['x-grid']+','+datum['y-grid']+']'"}
        },
        "update": {
          "strokeWidth": {"signal": "datum.secondary >-1 ? 3:1"},
          "opacity": [
            {
              "test": "!showmap",
              "signal": "showneurons  ? ((!isDefined(selectedNeuron.id) || selectedNeuron.id === datum.id || datum.class !== selectedNeuron.class) ? (datum.stabilized ? 0.5: 1): 0.3) : 0"
            }
          ],
          "size": [
            {
              "test": "showmap",
              "field": "score",
              "scale": "score",
              "mult": {"signal": "15*scale*neuronscale"}
            },
            {"field": "score", "scale": "score", "mult": {"signal": "2*scale"}}
          ],
          "fill": [
            {"test": "selectedNeuron.id == datum.id", "value": "white"},
            {"field": "class", "scale": "color"}
          ],
          "xc": [
            {"test": "showmap", "field": "x-grid", "scale": "xscale-grid"},
            {"field": "x", "scale": "xscale"}
          ],
          "yc": [
            {"test": "showmap", "field": "y-grid", "scale": "yscale-grid"},
            {"field": "y", "scale": "yscale"}
          ]
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "neuron"},
      "encode": {
        "enter": {
          "fill": {"value": "white"},
          "text": {"field": "datum.score"},
          "baseline": {"value": "bottom"},
          "align": {"value": "right"}
        },
        "update": {
          "xc": {
            "field": "xc",
            "offset": {
              "signal": "-sqrt(scale('score', datum.datum.score))",
              "mult": {"signal": "showmap ? 2*scale*neuronscale:scale"}
            }
          },
          "yc": {"field": "yc"},
          "opacity": {"signal": "datum.datum.id === selectedNeuron.id ? 1 :0"}
        }
      }
    }
  ]
}