{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc générer le fichier actif",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"${workspaceFolder}/*.c",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-lm"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compilateur : /usr/bin/gcc"
		}
	]
}