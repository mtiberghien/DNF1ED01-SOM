{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 700,
  "height": 525,
  "background": "black",
  "signals": [
    {
      "name": "current_step",
      "value": -1,
      "bind": {"input": "range", "min": -1, "max": 1500, "step": 1},
      "on": [
        {
          "events": "timer{100}",
          "update": "autoplay ? (current_step >= steps[1] ? -1 :current_step + 1 ): current_step"
        }
      ]
    },
    {
      "name": "neuronscale",
      "init": "min(2,min(width,height)/400)",
      "bind": {"input": "range", "min": 0.5, "step": 0.1, "max": 2}
    },
    {"name": "autoplay", "value": false, "bind": {"input": "checkbox"}},
    {"name": "showrealdata", "value": true, "bind": {"input": "checkbox"}},
    {"name": "showneurons", "value": true, "bind": {"input": "checkbox"}},
    {"name": "showlinks", "value": true, "bind": {"input": "checkbox"}},
    {
      "name": "scale",
      "value": 0.8,
      "bind": {"input": "range", "step": 0.05, "min": 0, "max": 1},
      "on": [
        {
          "events": "view:mousewheel",
          "update": "max(0, min(1, scale + (event.wheelDelta > 0 ? 0.1 : -0.1)))"
        }
      ]
    },
    {
      "name": "selectedNeuron",
      "init": "{}",
      "on": [
        {"events": "@neuron:mouseover", "update": "datum"},
        {"events": "@neuron:mouseout", "update": "{}"}
      ]
    }
  ],
  "data": [
    {
      "name": "labels",
      "values": [
        {"id": -1, "name": "None"},
        {"id": 0, "name": "Iris-setosa"},
        {"id": 1, "name": "Iris-versicolor"},
        {"id": 2, "name": "Iris-virginica"}
      ]
    },
    {
      "name": "iris",
      "transform": [
        {"type": "filter", "expr": "isValid(datum.pw)"},
        {"type": "formula", "expr": "datum.pl+datum.pw", "as": "x"},
        {"type": "formula", "expr": "datum.sl+datum.sw", "as": "y"},
        {"type": "formula", "expr": "scale('id', datum.class)", "as": "class"},
        {"type": "window", "ops": ["row_number"], "as": ["id"]},
        {"type": "formula", "expr": "datum.id - 1", "as": "id"}
      ],
      "format": {
        "type": "csv",
        "parse": {
          "sl": "number",
          "sw": "number",
          "pl": "number",
          "pw": "number"
        },
        "header": ["sl", "sw", "pl", "pw", "class"],
        "delimiter": ","
      },
      "url": "https://raw.githubusercontent.com/mtiberghien/DNF1ED01-SOM/master/iris.data?token=ASL2ZNOGTZAUZICCRCTQLJ3AKRZX6"
    },
    {
      "name": "neurons",
      "format": {
        "type": "dsv",
        "delimiter": ";",
        "parse": {
          "x": "number",
          "y": "number",
          "z": "number",
          "step": "number",
          "score": "number",
          "secondary": "number",
          "class": "number",
          "stabilized": "number",
          "score1": "number",
          "score2": "number"
        },
        "header": [
          "vector",
          "x",
          "y",
          "z",
          "step",
          "score",
          "class",
          "secondary",
          "stabilized",
          "score1",
          "score2",
          "entries"
        ]
      },
      "url": "https://raw.githubusercontent.com/mtiberghien/DNF1ED01-SOM/master/som1D.data?token=ASL2ZNKSA34VIZ4UW3GA5ODALHJGM",
      "transform": [
        {"type": "extent", "signal": "steps", "field": "step"},
        {"type": "extent", "signal": "scores", "field": "score"},
        {"type": "filter", "expr": "datum.step === current_step"},
        {
          "type": "formula",
          "expr": "split(replace(replace(datum.vector, '[',''),']',''),',')",
          "as": "vector"
        },
        {
          "type": "formula",
          "expr": "[toNumber(datum.vector[0]),toNumber(datum.vector[1]),toNumber(datum.vector[2]),toNumber(datum.vector[3])]",
          "as": "vector"
        },
        {
          "type": "formula",
          "expr": "datum.vector[0]+datum.vector[1]",
          "as": "y"
        },
        {
          "type": "formula",
          "expr": "datum.vector[2]+datum.vector[3]",
          "as": "x"
        },
        {"type": "window", "ops": ["row_number"], "as": ["id"]},
        {"type": "formula", "expr": "datum.id - 1", "as": "id"}
      ]
    },
    {
      "name": "entries",
      "source": "neurons",
      "transform": [
        {"type": "filter", "expr": "datum.id === selectedNeuron.id"},
        {"type": "project", "fields": ["entries"]},
        {
          "type": "formula",
          "expr": "split(replace(replace(datum.entries, '[',''),']',''),',')",
          "as": "entries"
        },
        {"type": "flatten", "fields": ["entries"]},
        {"type": "formula", "expr": "toNumber(datum.entries)", "as": "entries"},
        {
          "type": "lookup",
          "from": "iris",
          "key": "id",
          "fields": ["entries"],
          "values": ["x", "y"]
        }
      ]
    },
    {
      "name": "links",
      "source": "neurons",
      "transform": [
        {
          "type": "project",
          "fields": ["id", "x", "y"],
          "as": ["s_id", "sx", "sy"]
        },
        {"type": "formula", "expr": "datum.s_id + 1", "as": "t_id"},
        {
          "type": "lookup",
          "from": "neurons",
          "key": "id",
          "fields": ["t_id"],
          "values": ["x", "y"],
          "as": ["tx", "ty"]
        },
        {"type": "filter", "expr": "isValid(datum.tx) && isValid(datum.ty)"}
      ]
    }
  ],
  "scales": [
    {
      "name": "xscale",
      "type": "linear",
      "domain": {"data": "iris", "field": "x"},
      "zero": false,
      "range": [
        {"signal": "width*(1-scale)/2"},
        {"signal": "width*(scale+1)/2"}
      ]
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {"data": "iris", "field": "y"},
      "range": [
        {"signal": "height*(1-scale)/2"},
        {"signal": "height*(1+scale)/2"}
      ],
      "zero": false
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "labels", "field": "id", "sort": true},
      "range": ["#555", "red", "yellow", "blue"]
    },
    {
      "name": "id",
      "type": "ordinal",
      "domain": {"data": "labels", "field": "name"},
      "range": {"data": "labels", "field": "id"}
    },
    {
      "name": "label",
      "type": "ordinal",
      "domain": {"data": "labels", "field": "id", "sort": true},
      "range": {"data": "labels", "field": "name"}
    },
    {
      "name": "score",
      "type": "linear",
      "domain": {"signal": "scores"},
      "range": [{"signal": "50*neuronscale"}, {"signal": "300*neuronscale"}]
    }
  ],
  "legends": [
    {
      "orient": "right",
      "fill": "color",
      "labelColor": "#fff",
      "encode": {
        "labels": {"update": {"text": {"signal": "scale('label',datum.value)"}}}
      }
    }
  ],
  "axes": [
    {
      "orient": "left",
      "scale": "yscale",
      "title": "Sepal.Width + Sepal.Length",
      "titleColor": "#fff",
      "domain": false,
      "labels": false,
      "ticks": false
    },
    {
      "orient": "bottom",
      "scale": "xscale",
      "titleColor": "#fff",
      "title": "Petal.Width + Petal.Length",
      "domain": false,
      "labels": false,
      "ticks": false
    }
  ],
  "marks": [
    {
      "type": "text",
      "encode": {
        "enter": {
          "fontSize": {"value": 14},
          "fontWeight": {"value": "bold"},
          "xc": {"signal": "width/2"},
          "align": {"value": "center"},
          "fill": {"value": "#eee"}
        },
        "update": {"text": {"signal": "'SOM 1D step: ' + current_step"}}
      }
    },
    {
      "type": "symbol",
      "from": {"data": "iris"},
      "encode": {
        "enter": {"stroke": {"value": "#555"}},
        "update": {
          "size": {"value": 30, "mult": {"signal": "neuronscale"}},
          "opacity": {"signal": "showrealdata ? 0.6 : 0"},
          "fill": {"field": "class", "scale": "color"},
          "xc": {"field": "x", "scale": "xscale"},
          "yc": {"field": "y", "scale": "yscale"}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "entries"},
      "encode": {
        "enter": {"stroke": {"value": "#555"}},
        "update": {
          "size": {"value": 30, "mult": {"signal": "neuronscale"}},
          "fill": {"value": "white"},
          "xc": {"field": "x", "scale": "xscale"},
          "yc": {"field": "y", "scale": "yscale"}
        }
      }
    },
    {
      "type": "rule",
      "from": {"data": "links"},
      "encode": {
        "update": {
          "stroke": {"value": "#bbb"},
          "strokeWidth": {"value": 0.5},
          "opacity": {"signal": "showlinks && showneurons ? 1 :0"},
          "x": [{"field": "sx", "scale": "xscale"}],
          "y": [{"field": "sy", "scale": "yscale"}],
          "x2": [{"field": "tx", "scale": "xscale"}],
          "y2": [{"field": "ty", "scale": "yscale"}]
        }
      }
    },
    {
      "type": "symbol",
      "name": "neuron",
      "from": {"data": "neurons"},
      "encode": {
        "enter": {"stroke": {"field": "secondary", "scale": "color"}},
        "update": {
          "tooltip": {
            "signal": "{'score max':datum.score1, 'score 2':datum.score2,'coords':'['+datum['x-grid']+','+datum['y-grid']+']'}"
          },
          "strokeWidth": {"signal": "datum.secondary >-1 ? 3:1"},
          "opacity": {
            "signal": "showneurons  ? ((!isDefined(selectedNeuron.id) || selectedNeuron.id === datum.id || datum.class !== selectedNeuron.class) ? (datum.stabilized ? 0.5: 1): 0.3) : 0"
          },
          "size": [
            {"field": "score", "scale": "score", "mult": {"signal": "2*scale"}}
          ],
          "fill": [
            {"test": "selectedNeuron.id == datum.id", "value": "white"},
            {"field": "class", "scale": "color"}
          ],
          "xc": [{"field": "x", "scale": "xscale"}],
          "yc": [{"field": "y", "scale": "yscale"}]
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "neuron"},
      "encode": {
        "enter": {
          "fill": {"value": "white"},
          "text": {"field": "datum.score"},
          "baseline": {"value": "bottom"},
          "align": {"value": "right"}
        },
        "update": {
          "xc": {
            "signal": "datum.bounds.x1",
            "offset": {"signal": "-min(4, 3*scale)"}
          },
          "yc": {"field": "yc"},
          "opacity": {"signal": "datum.datum.id === selectedNeuron.id ? 1 :0"}
        }
      }
    }
  ]
}
